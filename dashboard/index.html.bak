    <script>
        // Update date and time
        function updateDateTime() {
            const now = new Date();
            const hours = now.getHours().toString().padStart(2, '0');
            const minutes = now.getMinutes().toString().padStart(2, '0');
            const time = document.querySelector('.time');
            if (time) {
                time.textContent = `${hours} : ${minutes} ${hours >= 12 ? 'PM' : 'AM'}`;
            }
            
            const days = ['SUN', 'MON', 'TUE', 'WED', 'THU', 'FRI', 'SAT'];
            const months = ['JAN', 'FEB', 'MAR', 'APR', 'MAY', 'JUN', 'JUL', 'AUG', 'SEP', 'OCT', 'NOV', 'DEC'];
            const day = days[now.getDay()];
            const date = now.getDate();
            const month = months[now.getMonth()];
            const dateDisplay = document.querySelector('.date');
            if (dateDisplay) {
                dateDisplay.textContent = `${day} | ${date} ${month}`;
            }
        }
        
        // Initialize the dashboard
        document.addEventListener('DOMContentLoaded', function() {
            // Update date and time initially and then every minute
            updateDateTime();
            setInterval(updateDateTime, 60000);
            
            // Add event listeners to view tabs
            const viewTabs = document.querySelectorAll('.view-tab');
            viewTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    viewTabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                });
            });
            
            // Add event listeners to calendar days
            const days = document.querySelectorAll('.day');
            days.forEach(day => {
                day.addEventListener('click', function() {
                    days.forEach(d => d.classList.remove('selected'));
                    this.classList.add('selected');
                });
            });
            
            // Add accessibility improvements to social media links
            const socialLinks = document.querySelectorAll('.btn-circle');
            socialLinks.forEach(link => {
                const icon = link.querySelector('i');
                if (icon) {
                    const platformClass = icon.className.split(' ')[1];
                    const platform = platformClass.split('-')[1];
                    link.setAttribute('title', `Connect on ${platform}`);
                    link.setAttribute('aria-label', `Connect on ${platform}`);
                }
            });
        });
        
        // Network status monitoring
        window.addEventListener('online', function() {
            document.body.classList.remove('offline');
            console.log('Back online, syncing data...');
        });
        
        window.addEventListener('offline', function() {
            document.body.classList.add('offline');
            console.log('You are offline. Some features may be limited.');
        });
    </script>
